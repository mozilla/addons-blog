{
  "name": "addons-blog",
  "version": "0.0.1",
  "description": "Standalone statically generated blog",
  "main": "index.js",
  "author": "Mozilla Add-ons Team",
  "license": "MPL2.0",
  "private": true,
  "scripts": {
    "prettier": "prettier --write '**'",
    "prettier-ci": "prettier -c '**'",
    "prettier-dev": "pretty-quick --branch master",
    "test-ci": "npm run prettier-ci",
    "clean": "rimraf './build/'",
    "build": "npm run clean && eleventy --config=./eleventy.config.js && npm run sass:build && npm run script:build",
    "build:unpublished": "ELEVENTY_ENV=production BUILD_UNPUBLISHED=1 npm run build",
    "build:production": "ELEVENTY_ENV=production npm run build",
    "build:serve": "eleventy --serve --port 8081 --config=./eleventy.config.js",
    "build:debug": "DEBUG=Eleventy* npm run build:serve",
    "start": "npm run clean && BUILD_UNPUBLISHED=1 npm-run-all -p build:serve sass:* script:*",
    "start:debug": "npm run clean && BUILD_UNPUBLISHED=1 npm-run-all -p build:debug sass:* script:*",
    "sass:build": "bin/build-styles",
    "sass:watch": "chokidar 'src/assets/css/**/*.scss' -c 'npm run sass:build'",
    "script:build": "bin/build-script",
    "script:watch": "chokidar 'src/assets/js/*.js' -c 'npm run script:build'"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "@mozilla-protocol/tokens": "^5.0.5",
    "chokidar-cli": "^2.1.0",
    "dompurify": "^2.2.6",
    "eleventy-xml-plugin": "^0.1.0",
    "eslint": "^7.21.0",
    "flat-cache": "^3.0.4",
    "fs-extra": "^9.1.0",
    "luxon": "^1.26.0",
    "markdown-it-container": "^3.0.0",
    "node-fetch": "^2.6.1",
    "node-sass": "^5.0.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "photon-colors": "^3.3.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prismjs": "^1.23.0",
    "stylelint": "^13.11.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
