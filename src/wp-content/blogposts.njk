{% extends "../layouts/base.njk" %}

{% set title = '<?= get_the_title() ?>' | safe %}
{% set featuredImage = '<?= get_the_post_thumbnail_url(get_the_id(), "full") ?>' | safe %}

{% block content %}
<main aria-label="Content">
  <?php while (have_posts()) : the_post(); ?>
  <div class="blogpost-wrapper">
    <div class="blogpost-content">
      <div class="blogpost-content-wrapper">
        <?= get_the_content() ?>
      </div>
    </div>
    <aside class="blogpost-sidebar">
      <dl class="blogpost-meta">
        <dt class="updated">Updated</dt>
        <dd class="updated"><?= get_the_time('{{ config.readable_date_format }}') ?></dd>
        <dt class="author">Author</dt>
        <dd class="author"><?= get_the_author() ?></dd>
      </dl>
    </aside>
  </div>
  <?php endwhile; ?>
</main>
{% endblock content %}

{% block stylesheets %}
{{ super() }}
<link rel="stylesheet" href="{{ config.asset_path|safe }}/assets/css/addons-frontend-card.css">
{% endblock %}

{% block javascripts %}
