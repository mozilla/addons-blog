{% extends "../layouts/base.njk" %}

{% set title = "<?= get_the_title() ?>" | safe %}
{% set featuredImage = "<?= get_the_post_thumbnail_url(get_the_id(), 'full') ?>" | safe %}

{% block content %}
<main aria-label="Content">
  <?php while (have_posts()) : the_post(); ?>
    {# The format used below is equivalent to the following Luxon format: LLLL d, kkkk #}
    {%- set postModifiedDate = "<?= get_the_modified_date('F j, Y') ?>" | safe -%}
    {%- set postContent = "<?= get_the_content() ?>" | safe -%}
    {%- set postAuthor = "<?= get_the_author() ?>" | safe -%}
    {%- set postAuthorAvatar = "<?= get_avatar_url(get_the_id(), ['size' => 96]) ?>" | safe -%}

    {%- include 'blogpost.njk' -%}
  <?php endwhile; ?>
</main>
{% endblock content %}

{% block stylesheets %}
{{ super() }}
<link rel="stylesheet" href="{{ config.asset_path|safe }}/assets/css/addons-frontend-blog-utils.css">
{% endblock %}

{% block javascripts %}
{{ super() }}
<script src="{{ config.asset_path|safe }}/assets/js/addons-frontend-blog-utils.js"></script>
<script src="{{ config.asset_path|safe }}/assets/js/addon-cards.js"></script>
{% endblock %}
